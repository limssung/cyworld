@charset "UTF-8";
@import url('https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@100&display=swap');
* {margin: 0; padding: 0; box-sizing: border-box;}
body {
	font-family: 'Noto Sans KR', sans-serif;
/* 	display: flex; */
	justify-content: right;
	align-items: center;
/* 	height: 100vh; */
}

body::before {
	content: "";
	position: absolute; z-index: 1;
	top: 0; right: 0; bottom: 0; left: 0;
	background-color: rgba(255,255,255.1); 
}
.mini-form{position: relative; z-index: 2;}
.mini-form h1 {
	font-size: 28px; color: black;
	text-align: center;
	margin-top: 60px;
}
.btn-area {margin-top: 0 auto 0;}
.btn-area button{
	width:  300px; height: 50px;
	background: #166cea;
	color: #fff;
	font-size: 20px;
	border: none;
	border-radius: 25px;
}
.caption{
	margin-top: 20px;
	text-align: center;
}
.caption a{
	font-size: 15px; color: #999;
	text-decoration: none;
}
div {
    width: 100%;
    height: 300px;
    
    border: 1px solid #000;
}
div.left {
    width: 50%;
    float: left;
    box-sizing: border-box;
    background: white;
}
div.right {
    width: 50%;
    float: right;
    box-sizing: border-box;
    background: white;
}
a{
	width: 200px;
	height: 200px;	
}	